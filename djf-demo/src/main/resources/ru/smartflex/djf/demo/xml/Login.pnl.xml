<?xml version="1.0" encoding="UTF-8"?>

<panel>
	<layout clazz="java.awt.BorderLayout" />
	<panel constraint="Center">
		<layout clazz="net.miginfocom.swing.MigLayout">
			<param type="string" value="align 50% 50%" />
		</layout>
		<items>
			<label text="${demo.login.login}" constraint="right" />
			<text bind="ln.login" constraint="width 140:140:140" order="1" />
			<button belong="ln" text="${demo.login.connect}"
				constraint="spany, grow, wrap" order="3" action="login" />
			<label text="${demo.login.password}" constraint="right" />
			<password bind="ln.password" constraint="width 140:140:140"
				order="2" />
		</items>
	</panel>
</panel>
