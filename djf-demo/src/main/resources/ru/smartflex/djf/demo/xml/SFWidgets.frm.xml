<?xml version="1.0" encoding="UTF-8"?>

<form>
    <description>Hello world simple form</description>
    <layout clazz="java.awt.BorderLayout"/>
    <panel>
        <layout clazz="net.miginfocom.swing.MigLayout">
            <param type="string" value="align 50% 50%"/>
        </layout>
        <items>
            <stepPercent bind="sp.percent" tips="Font percent value" persist="true" id="idFontPercent" low="0" high="50" delta="10"/>
        </items>
    </panel>
    <models>
        <model id="sp" noSave="true">
            <bean clazz="ru.smartflex.djf.demo.java.StepperPercentInfo" selfCreated="true"/>
        </model>
    </models>
</form>
